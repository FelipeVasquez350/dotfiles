// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "git_panel": {
        "scrollbar": {
            "show": "auto"
        }
    },
    "project_panel": {
        "sticky_scroll": true
    },
    "autosave": "on_focus_change",
    "ssh_connections": [
        {
            "host": "Akatosh",
            "projects": [
                {
                    "paths": ["/home/v/Documents/GitHub/NixOS-Server"]
                },
                {
                    "paths": [
                        "/home/v/Documents/Uranion/terraform-infrastructure-kubernetes"
                    ]
                },
                {
                    "paths": [
                        "/home/v/Documents/Uranion/terraform-infrastructure-kubernetes/vmedia"
                    ]
                }
            ]
        },
        {
            "host": "Framework13",
            "projects": []
        },
        {
            "host": "132.145.236.194",
            "username": "admin",
            "args": [
                "-i",
                "/home/felipe350/Documents/Code/Terraform/Oracle/keys/id_ed25519_oracle"
            ],
            "projects": [
                {
                    "paths": ["/opt/oracle/mgmt_agent"]
                }
            ]
        }
    ],
    "features": {
        // "edit_prediction_provider": "zed"
        "edit_prediction_provider": "copilot"
    },
    "agent": {
        "inline_assistant_model": {
            "provider": "copilot_chat",
            "model": "claude-3.5-sonnet"
        },
        "play_sound_when_agent_done": true,
        "default_profile": "write",
        "always_allow_tool_actions": true,
        "default_model": {
            "provider": "copilot_chat",
            "model": "claude-haiku-4.5"
        }
    },
    "file_types": {
        "Helm": [
            "**/templates/**/*.tpl",
            "**/templates/**/*.yaml",
            "**/templates/**/*.yml",
            "**/helmfile.d/**/*.yaml",
            "**/helmfile.d/**/*.yml"
        ],
        "OpenTofu": ["tf"],
        "OpenTofu Vars": ["tfvars", "*.tfvars.example"]
    },
    //https://github.com/zed-extensions/nix
    "languages": {
        "C": {
            "language_servers": ["clangd"],
            // "format_on_save": "off",
            "formatter": [
                {
                    "language_server": { "name": "clangd" }
                }
            ]
        },
        "LaTeX": { "soft_wrap": "editor_width" },
        "Typst": { "soft_wrap": "editor_width" },
        "Python": {
            "language_servers": ["pyright", "ruff"],
            // "format_on_save": "off",
            "formatter": [
                {
                    "language_server": { "name": "ruff" }
                }
            ]
        },
        "Rust": {
            "formatter": "language_server",
            "format_on_save": "on"
        },

        "Nix": {
            "language_servers": ["nixd", "!nil"],
            // "format_on_save": "off",
            "preferred_line_length": 120,
            "formatter": "language_server"
        },
        "OpenTofu": {
            "format_on_save": "on",
            "tab_size": 2
        },
        "OpenTofu Vars": {
            "format_on_save": "on",
            "tab_size": 2
        },
        "YAML": {
            "tab_size": 2
        },
        "JSON": { "tab_size": 2, "allow_rewrap": "anywhere" },
        "LOG": { "soft_wrap": "editor_width" }
    },
    "lsp": {
        "clangd": {
            "binary": {
                "ignore_system_version": true
            }
        },
        "nixd": {
            "enable_lsp_tasks": true,
            "initialization_options": {
                "formatting": {
                    "command": ["nixfmt", "--quiet", "--"]
                },
                "nix": {
                    "flake": {
                        "autoArchive": true
                    }
                }
            }
        }
    },

    "max_tabs": 8,
    "theme": "Zed Legacy: Andromeda",
    "icon_theme": "Material Icon Theme",
    "buffer_font_size": 18.0,
    "ui_font_size": 20,
    "tab_size": 4,
    "agent_ui_font_size": 20,
    "agent_buffer_font_size": 16
}
